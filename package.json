{
  "name": "qodo-plus",
  "displayName": "Qodo Plus",
  "description": "test cases generation",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.2"
  },
  "publisher": "nguyenhoangquan", 
  "repository": {
    "type": "git",
    "url": "https://github.com/Quannggg/qodo-plus"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "qodo-plus.generateTest",
        "title": "Qodo: Generate Tests"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == python",
          "command": "qodo-plus.generateTest",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
    "title": "Qodo Plus Configuration",
      "properties": {
        "qodoPlus.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key."
        },
        "qodoPlus.baseUrl": {
          "type": "string",
          "default": "https://api.deepseek.com",
          "description": "The base URL of the AI ​​service (Eg: https://api.openai.com/v1)"
        },
        "qodoPlus.model": {
          "type": "string",
          "default": "deepseek/deepseek-chat",
          "description": "AI model (Eg: deepseek/deepseek-chat)."
        },
        "qodoPlus.sourceFilePath": {
          "type": "string",
          "default": "{relativeFilePath}",
          "description": "Template for source files. Supports variables: {relativeFilePath}, {fileName}, {sourceDir}"
        },
        "qodoPlus.testFilePath": {
          "type": "string",
          "default": "tests/test_{fileName}",
          "description": "Template for test files. Supports variables: {relativeFilePath}, {fileName}, {sourceDir}"
        },
        "qodoPlus.codeCoverageReportPath": {
          "type": "string",
          "default": "coverage.xml",
          "description": "File name/path for coverage"
        },
        "qodoPlus.testCommand": {
          "type": "string",
          "default": "pytest {testFilePath} --cov={sourceDir} --cov-branch --cov-report=xml --cov-report=html",
          "description": "The command runs the test. Supported variables: {testFilePath}, {sourceDir}"
        },
        "qodoPlus.coverageType": {
          "type": "string",
          "default": "cobertura",
          "description": "Coverage type (Eg: cobertura)"
        },
        "qodoPlus.desiredCoverage": {
          "type": "number",
          "default": 100,
          "description": "Desired coverage (0-100)"
        },
        "qodoPlus.maxIterations": {
          "type": "number",
          "default": 3,
          "description": "Max iterations"
        },
        "qodoPlus.maxFixAttempts": {
          "type": "number",
          "default": 1,
          "description": "Max fix attempts"
        }
      }
    }
  },
  
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.11",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
